<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/iv_margin_layout"
    android:layout_marginTop="@dimen/iv_margin_layout"
    android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/item_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/iv_margin_start"
            android:textSize="@dimen/item_tv_text_size"
            android:textStyle="bold"
            tools:text="@string/word_translate"
            android:layout_gravity="center"
            android:layout_weight="1"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/item_imageUrl"
            android:layout_width="150dp"
            android:layout_height="150dp"/>
</LinearLayout>